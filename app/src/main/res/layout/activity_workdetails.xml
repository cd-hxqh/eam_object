<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="cdhxqh.shekou.ui.activity.Work_detailsActivity">

    <include layout="@layout/title_main"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <include layout="@layout/work_numlayout"></include>

            <include layout="@layout/work_plan_details"></include>

            <include layout="@layout/work_plan_info"></include>

            <include layout="@layout/work_em_info"></include>

            <include layout="@layout/work_failure_info"></include>

            <include layout="@layout/work_real_info"></include>

            <include layout="@layout/work_udremark"></include>

            <include layout="@layout/work_buttom"></include>
        </LinearLayout>
    </ScrollView>

</LinearLayout>